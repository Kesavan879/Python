class Solution(object):
    def hasCycle(self, head):
        """
        :type head: ListNode
        :rtype: bool
        """
        slow, fast = head, head  # ğŸ¢ğŸ‡ The hunt begins

        while fast and fast.next:
            slow = slow.next       # Calm stride ğŸƒ
            fast = fast.next.next  # Flash step âš¡

            if slow == fast:
                return True  # âš”ï¸ They crossed paths â€” the loop exists!

        return False  # ğŸŒ… The path ends in peace â€” no demons here.
